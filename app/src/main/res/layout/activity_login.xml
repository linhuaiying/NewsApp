<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.UserView.RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/login">

    <EditText
        android:id="@+id/login_input_phone_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:ems="10"
        android:hint="请输入手机号"
        android:textColor="#fff"
        android:inputType="phone" />


    <EditText
        android:id="@+id/login_input_password_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_phone_et"
        android:layout_below="@+id/login_input_phone_et"
        android:layout_marginTop="44dp"
        android:hint="请输入密码"
        android:textColor="#fff"
        android:inputType="textPassword" >
    </EditText>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_password_et"
        android:layout_below="@+id/login_input_password_et"
        android:layout_marginTop="44dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/login">

        <Button
            android:id="@+id/login_commit_btn"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:stateListAnimator="@null"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有账号？点击注册"
        android:layout_below="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>

